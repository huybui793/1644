<div class="container text-center">
   {{!-- table.table.table-bordered>tr*3>th*7 --}}
   <table class="table bordered">
      <tr>
         <th class="h2 text text-success" colspan="6">Car LIST</th>
         <th>
            <a class="btn btn-primary" href="/car/add">Add Car</a>
         </th>
      </tr>
      <tr>
         <th>Name</th>
         <th>Quality</th>
         <th>Price</th>
         <th>Date</th>
         <th>Brand</th>
         <th>Best Seller</th>


      </tr>
      {{!-- heach --}}
      {{#each car }}
      <tr>       
         <th>{{Name}}</th>
         <th>{{Quantity}}</th>
         <th>{{Price}}</th>
         <th>{{Date}}</th>
         <th>{{Brand}}</th>
         <th>{{BestSeller}}</th>
         <th>
            <a class="btn btn-warning" href="/car/edit/{{_id}}">Edit</a>
            <a class="btn btn-danger" href="/car/delete/{{_id}}"
               onclick="return confirm('Do you want to delete this car ?');">Delete</a>
         </th>
      </tr>
      {{/each}}
   </table>
</div>